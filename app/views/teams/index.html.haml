%h1 Teams List

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Owner
      %th Actions
  %tbody
    - @teams.each do |team|
      %tr
        %td= team.name
        %td= team.description
        %td= team.owner.username
        %td= link_to 'Edit', edit_team_path(team)
        %td= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }
  
= link_to 'New Team', new_team_path
