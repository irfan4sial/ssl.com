= form_with(model: @user, local: true) do |form|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = form.label :first_name
    = form.text_field :first_name, required: true

  .field
    = form.label :last_name
    = form.text_field :last_name, required: true

  .field
    = form.label :username
    = form.text_field :username, required: true

  .field
    = form.fields_for :roles do |role_form|
      = role_form.label :name, "Role"
      = role_form.collection_select :id, Role.all, :id, :name, include_blank: true

  .field
    = form.label :email
    = form.email_field :email, required: true

  .field
    = form.label :password_digest
    = form.password_field :password_digest, required: true

  .actions
    = form.submit 'Save'
