<h1>Projects List</h1>
<table class="border rounded-lg shadow-md w-full">
  <thead>
    <tr>
      <th class="px-4 py-2 bg-gray-800 text-white font-semibold border border-gray-600">Project Name</th>
      <th class="px-4 py-2 bg-gray-800 text-white font-semibold border border-gray-600">Tasks Name</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class=" px-4 py-2 border border-gray-600"><%= project.name %></td>
<!--        <td class=" px-4 py-2 border border-gray-600"><%#= project.tasks.first.name %></td>-->
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to "New Project", new_project_path %>